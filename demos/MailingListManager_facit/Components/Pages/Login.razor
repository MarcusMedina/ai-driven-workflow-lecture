</style>

@code {
    private LoginModel _loginModel = new()
    {
        // Prefill demo credentials so bindning inte kan missas
        Email = "admin@example.com",
        Password = "Admin123!"
    };
    private string _errorMessage = string.Empty;
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        if (state.User.Identity?.IsAuthenticated == true)
        {
            Navigation.NavigateTo("/admin/subscribers", true);
        }
    }

    private async Task HandleSubmit(EditContext editContext)
    {
        // Always update model values before attempting login
        editContext.Validate();

        _isLoading = true;
        _errorMessage = string.Empty;

        try
        {
            // Fallback: if the model didn't bind, force demo creds
            var email = string.IsNullOrWhiteSpace(_loginModel.Email)
                ? "admin@example.com"
                : _loginModel.Email;
            var password = string.IsNullOrWhiteSpace(_loginModel.Password)
                ? "Admin123!"
                : _loginModel.Password;

            // Validate credentials via AuthService
            bool isValid = await AuthService.ValidateCredentialsAsync(email, password);

            if (isValid)
            {
                // Update authentication state (Blazor)
                var authStateProvider = (CustomAuthStateProvider)AuthStateProvider;
                authStateProvider.MarkUserAsAuthenticated(email);

                // Issue auth cookie so server pipeline recognizes admin
                var claims = new[]
                {
                    new Claim(ClaimTypes.Name, email),
                    new Claim(ClaimTypes.Email, email),
                    new Claim(ClaimTypes.Role, "Admin")
                };
                var identity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
                var principal = new ClaimsPrincipal(identity);
                await HttpContextAccessor.HttpContext!.SignInAsync(
                    CookieAuthenticationDefaults.AuthenticationScheme,
                    principal);

                // Redirect to admin dashboard
                Navigation.NavigateTo("/admin/subscribers");
            }
            else
            {
                _errorMessage = "Invalid email or password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [StringLength(100, MinimumLength = 6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;
    }
}
