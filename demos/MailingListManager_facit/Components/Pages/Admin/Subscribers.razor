@code {
    private List<Subscriber> _subscribers = new();
    private string _newEmail = string.Empty;
    private string _addMessage = string.Empty;
    private bool _addSuccess = false;
    private bool _isLoading = true;
    private bool _isAddingSubscriber = false;
    private string _userEmail = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        // Get authenticated user email
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        _userEmail = authState.User.Identity?.Name ?? "Admin";

        // Load subscribers
        await LoadSubscribers();
    }

    private async Task LoadSubscribers()
    {
        _isLoading = true;
        _subscribers = await SubscriberService.GetAllAsync();
        _isLoading = false;
    }

    private async Task AddSubscriber()
    {
        _isAddingSubscriber = true;
        _addMessage = string.Empty;

        try
        {
            // Validate email not empty
            if (string.IsNullOrWhiteSpace(_newEmail))
            {
                _addMessage = "Please enter an email address.";
                _addSuccess = false;
                return;
            }

            // Check if email already exists
            if (await SubscriberService.EmailExistsAsync(_newEmail))
            {
                _addMessage = $"Email '{_newEmail}' is already subscribed.";
                _addSuccess = false;
                return;
            }

            // Add subscriber
            var subscriber = await SubscriberService.AddSubscriberAsync(_newEmail);

            if (subscriber == null)
            {
                _addMessage = "Invalid email format. Please enter a valid email address.";
                _addSuccess = false;
                return;
            }

            // Success!
            _addMessage = $"‚úÖ Successfully added {subscriber.Email}";
            _addSuccess = true;
            _newEmail = string.Empty;

            // Reload list
            await LoadSubscribers();
        }
        catch (Exception ex)
        {
            _addMessage = $"Error: {ex.Message}";
            _addSuccess = false;
        }
        finally
        {
            _isAddingSubscriber = false;
        }
    }

    private async Task RemoveSubscriber(int id)
    {
        var subscriber = _subscribers.FirstOrDefault(s => s.Id == id);
        if (subscriber == null) return;

        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Are you sure you want to remove {subscriber.Email} from the mailing list?");

        if (!confirmed) return;

        bool removed = await SubscriberService.RemoveSubscriberAsync(id);

        if (removed)
        {
            _addMessage = $"‚úÖ Successfully removed {subscriber.Email}";
            _addSuccess = true;
            await LoadSubscribers();
        }
        else
        {
            _addMessage = "Failed to remove subscriber.";
            _addSuccess = false;
        }
    }

    private async Task Logout()
    {
        var authStateProvider = (CustomAuthStateProvider)AuthStateProvider;
        authStateProvider.MarkUserAsLoggedOut();
        await HttpContextAccessor.HttpContext!.SignOutAsync(CookieAuthenticationDefaults.AuthenticationScheme);
        Navigation.NavigateTo("/login", true);
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
